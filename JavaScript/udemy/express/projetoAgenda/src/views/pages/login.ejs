
<%- include('../includes/heads.ejs') %>
<%- include('../includes/nav.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center mt-4">Login ou Inscrição</h1>
            <p class="text-center lead">Faça login ou crie sua senha</p>    
            <%- include('../includes/messages.ejs') %>         
            <div class="row">
                <div class="col-lg">
                    <h4 class="pt-3">Faça seu cadastro</h4>
                    <p>Para novos usuarios!</p>
                    <form autocomplete="off" action="/login/register" method="post" class="pb-4">
                        <div class="form-group">
                          <label>Seu mail</label>
                          <input placeholder="email" type="text" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input placeholder="senha" type="password" class="form-control" name="senha" required>
                        </div>
                        <button type="submit" class="btn btn-primary my-2">Criar conta</button>
                    </form>
                </div>
                <div class="col-lg">
                    <h4 class="pt-3">Faça login</h4>
                    <p>Para usuarios antigos!</p>
                    <form autocomplete="off" action="/login/login" method="post">
                        <div class="form-group">
                          <label>Seu mail</label>
                          <input placeholder="email" type="text" class="form-control" name="email" required>
                        </div>
                        <div class="form-group">
                            <label>Sua senha</label>
                            <input placeholder="senha" type="password" class="form-control" name="senha" required>
                        </div>
                        <button type="submit" class="btn btn-primary my-2">Logar</button>
                    </form>
                </div>
            </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('../includes/footer.ejs') %>