
<%- include('../includes/heads.ejs') %>
<%- include('../includes/nav.ejs') %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-4">
            <h1 class="text-center">Contatos</h1>
            <p class="text-center lead">Crie seu contato</p>
            <%- include('../includes/messages.ejs') %>
            <% if (!contato._id) { %>
              <form autocomplete="off" action="/NewContato/register" method="post" class="pb-4">
            <% } else { %>
              <form autocomplete="off" action="/editcontato/<%=contato._id%>" method="post" class="pb-4">
            <% } %>
                <div class="form-group">
                  <label>Nome</label>
                  <input placeholder="nome" type="text" class="form-control" name="nome" value="<%= contato.nome %>">
                </div>
                <div class="form-group">
                    <label>Sobrenome</label>
                    <input placeholder="sobrenome" type="text" class="form-control" name="sobrenome" value="<%= contato.sobrenome %>" >
                  </div>
                  <div class="form-group">
                    <label>Email</label>
                    <input placeholder="email" type="text" class="form-control" name="email" value="<%= contato.email %>">
                  </div>
                  <div class="form-group">
                    <label>Telefone</label>
                    <input placeholder="telefone" type="tel" class="form-control" name="telefone" value="<%= contato.telefone %>">
                  </div>
                  <% if (!contato._id) { %>
                    <button type="submit" class="btn btn-primary my-2">Cadastrar Contato</button>
                  <% } else { %>
                    <button type="submit" class="btn btn-primary my-2">Editar Contato</button>
                  <% } %>
                  <td><a href="/excluirctt/<%= contato._id %>"  class="btn btn-dark my-2">EXCLUIR</a></td>
            </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>
<%- include('../includes/footer.ejs') %>